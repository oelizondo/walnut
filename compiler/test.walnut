program sort_array;

globals{
  int array[100];
  int cont = 0;
}

func filler() {
  int filler = 100;
  while(cont < 100){
	array[cont] = filler;
	filler = filler - 1;
	cont = cont + 1;
  }
  cont = 0;
}

func find_in_array(int x){
  boolean flag = false;
  while(cont >= 0){
    if(array[cont] == x){
      flag = true;
    }
    else{}
    cont = cont-1;
  }

  if(flag == true){
    puts("Value found");
  }
  else{
    puts("Value not found");
  }

}

run
  filler();
  int x = 100;
  cont = 99;
  find_in_array(x);
end
